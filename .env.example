# 起動モード: credentials | manual
TIKTOK_LOGIN_MODE=manual

# credentialsモード用（2FA/CAPTCHAで失敗することがあります）
TIKTOK_USERNAME=you@example.com
TIKTOK_PASSWORD=your_password

# Selenium Remote WebDriver URL（docker-compose の selenium サービスを想定）
SELENIUM_REMOTE_URL=http://selenium:4444/wd/hub
SELENIUM_HEADLESS=false

# Cookie キャッシュ保存先
COOKIE_CACHE_PATH=./cookies.json

# API ポート
PORT=3000

# ログレベル: fatal | error | warn | info | debug | trace
LOG_LEVEL=info

# ネットワーク/地域で必要ならプロキシを指定
# HTTP_PROXY=http://host:port
# HTTPS_PROXY=http://host:port

